<HTML>

    <HEAD>
        <TITLE>HTA Demo</TITLE>
        <meta http-equiv="x-ua-compatible" content="ie=9">
        <HTA:APPLICATION ID="oHTA" APPLICATIONNAME="myApp" BORDER="thin" BORDERSTYLE="normal" CAPTION="yes" ICON=""
            MAXIMIZEBUTTON="no" MINIMIZEBUTTON="no" SHOWINTASKBAR="yes" SINGLEINSTANCE="no" SYSMENU="yes" VERSION="1.0"
            WINDOWSTATE="maximize" />
    
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP&family=Noto+Serif+JP&display=swap"
            rel="stylesheet">
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP&family=Noto+Serif+JP&display=swap');
        </style>
    
        <script>
    
            //alert(oHTA.commandLine);
    
            // 当前路径
            var curPath;
    
            /* This function also retrieves the value of the commandLine property,
               which cannot be set as an attribute.  */
    
            window.onload = function ()
            {
                // 窗口缩放倍率
                var scale = 2.0;
    
                // 设定窗口大小
                window.resizeTo(1000 * scale, 900 * scale);
    
                // 设定当前路径
                var cmd = oHTA.commandLine;
                cmd = cmd.substring(1, cmd.length - 2);
                cmd = cmd.substring(0, cmd.lastIndexOf("\\") + 1);
                curPath = cmd;
    
            }
    
            // 执行批处理
            function RunBat(batPath, isShow) {
                RunCmd(batPath, isShow);
            }
    
            // 执行控制台命令
            function RunCmd(cmd, isShow) {
                var shell = new ActiveXObject("WScript.Shell");
                shell.run(curPath + cmd, 1, false);
            }
    
            // 打开文件或者文件夹
            function OpenFolder(path) {
                var shell = new ActiveXObject("WScript.Shell");
                shell.run("explorer.exe /e," + path, 1, false);
            }
    
            // 打开链接
            function OpenLink(link) {
                var shell = new ActiveXObject("WScript.Shell");
                shell.run(link);
            }
    
            // 测试
            function Test() {
                var shell = new ActiveXObject("WScript.Shell");
                var file = "\"" + curPath + "新規 Microsoft Excel Worksheet.xlsx" + "\"";
                alert(file);
                shell.run(file);
            }
    
            // 复制文本
            function Copy(text) {
                window.clipboardData.setData("text", text);
            }
        </script>
        <style>
            h4 {
                font-family: 'Noto Serif JP', serif;
            }
    
            body {
                font-family: 'Noto Sans JP', sans-serif;
                font-family: 'Noto Serif JP', serif;
            }
    
            input {
                font-family: 'Noto Sans JP', sans-serif;
            }
    
            p {
                color: red;
            }
    
            .btn {
                display: inline-block;
